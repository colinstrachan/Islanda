<%= render "components/banner" %>
<div class="container">
<%= render "maps" %>
  <div class="row">
    <% @islands.each do |i| %>
    <div class="col-xs-12 col-sm-4">
     <%= link_to island_path(i) do %>
     <div class="card" style="background-image: linear-gradient(-90deg, rgba(0,0,0,0.1), rgba(0,0,0,0.7)), url('<%= cl_image_path i.photo, crop: :fill %>')">
      <div class="card-category">
        <%= i.name %>
      </div>
      <div class="card-description">
        <h2><%= i.location.capitalize %></h2>
        <p><%= i.description %></p>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
