<div class="booking-container">
  <p>Price</p>
  <div class="booking-info">
    <div class="booking-price-left">
      $<%= @island.price %>
    </div>
    <div class="booking-price-right">
      /day
    </div>
  </div>
  <div class="booking-form">
    <%= simple_form_for [@island, @booking] do |f| %>
    <%= f.input :start_date, label: "Check In", as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :end_date, label: "Check Out", as: :string, required: false, input_html: {class: "datepicker"} %>
  </div>
  <div class="booking-button">
      <%= f.submit "Book Now", :class => "book-button" %>
      <% end %>
  </div>
</div>
