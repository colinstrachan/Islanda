<div class="wrapper" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://www.touropia.com/gfx/d/uninhabited-islands-around-the-world/rock_islands.jpg?v=1');">
    <div class="form-container">
        <%= simple_form_for(@island) do |f| %>
        <%= f.error_notification %>
      <div class="form-inputs">
        <div class="signup-container" style="width:100%; padding: 20px">
  <!-- [...] -->
          <%= f.input :name, required: true, value: @island.name %>
          <%= f.input :location, required: true, value: @island.location %>
          <%= f.input :climate, required: true, value: @island.climate %>
          <%= f.input :price, required: true, value: @island.price %>
          <%= f.input :capacity, required: true, value: @island.capacity %>
          <%= f.input :description, required: true, value: @island.description %>
          <%= f.input :photo, value: @island.photo %>
          <%= f.input :photo_cache, as: :hidden %>
    <!-- [...] -->
          <div class="form-actions">
            <%= f.button :submit, "Update Island", class: 'btn-primary btn-lg' %>
          </div>
        </div>
      </div>

      <% end %>
    </div>
</div>
