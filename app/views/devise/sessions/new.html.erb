<div class="wrapper" style="background-image: url('https://si.wsj.net/public/resources/images/BN-LL243_ISLAND_M_20151125120156.jpg'); height: 78vh">
  <div class="wrapper">
    <div class="form-container">
      <h3 style="text-align: center">Welcome back!</h3>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class="signup-container" style="width:100%; padding: 25px">
            <%= f.input :email,
            required: false,
            autofocus: true,
            input_html: { autocomplete: "email" } %>
            <%= f.input :password,
            required: false,
            input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= f.button :submit, "Log in", class: 'search-button'%>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
